    <![endif]-->
  </head>
    
    <script>
        function loginVerify(){
            
            
            $.ajax({
                type: "post",
                url:"/loginVerify",
                data: $("#loginForm").serialize(),
                success: function(msg){
                    if(msg != "login fail"){
                        
                        
                        window.location.href = "/userDetail?login="+msg;
                        
                        
                        
                    }else{
                        alert("账号密码错误");
                    }
                        
                }
            });

        }
            
    </script>
    
  <body class="hold-transition login-page">
      

      
    <div class="login-box">
      <div class="login-logo">
        <a href="#"><b>软乎</b></a>
      </div><!-- /.login-logo -->
      <div class="login-box-body">
        <p class="login-box-msg">封装思想，复用经验</p>
        <hr />
        <form id="loginForm" method="post">
        	<p class="text-center">账 号</p>
        	<div class="input-group">
  					<input type="text" class="form-control" aria-describedby="basic-addon2">
  					<span class="input-group-addon glyphicon glyphicon-user"></span>
					</div>
          <!--<div class="form-group has-feedback">
          	<p class="text-center">账号</p>
            <input name="account" type="text" class="form-control" placeholder="账号">
            <span class="input-group-addon" id="basic-addon2">@example.com</span>
          </div>-->
          <p class="text-center">密 码</p>
          <div class="input-group"/>
            <input name="password" type="password" class="form-control" aria-describedby="basic-addon2">
          	<span class="input-group-addon glyphicon glyphicon-lock"></span>
          </div>
          <hr/>
          <div class="row" >
            <div class="col-xs-2">
              
            </div>
            <div class="col-xs-8">
              <button type="button" onclick="loginVerify()" class="btn btn-primary btn-block btn-flat">登录</button>
            </div><!-- /.col -->
            
            <div class="col-xs-2">
              
            </div>
            
          </div>
        </form>

      </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->

    <!-- jQuery 2.1.4 -->
    <script src="plugins/jQuery/jQuery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="plugins/iCheck/icheck.min.js"></script>
    <script>
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' // optional
        });
      });
    </script>
  </body>
